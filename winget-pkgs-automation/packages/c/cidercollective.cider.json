{
  "$schema": "https://github.com/vedantmgoyal2009/vedantmgoyal2009/raw/main/winget-pkgs-automation/schema.json",
  "Identifier": "CiderCollective.Cider",
  "Update": {
    "InvokeType": "RestMethod",
    "Uri": "https://api.github.com/repos/ciderapp/cider-releases/releases?per_page=1",
    "Method": "Get",
    "Headers": {
      "Authorization": "$AuthToken",
      "Accept": "application/vnd.github.v3+json"
    },
    "Body": "",
    "UserAgent": ""
  },
  "PostResponseScript": "$UpdateCondition = $Response | Where-Object { $_.name -match 'main' -and $_.prerelease -eq $PreRelease -and $_.id -gt $PreviousReleaseId }",
  "VersionRegex": "(?<=v)[0-9.]+",
  "InstallerRegex": "winget.*(exe|msi|msix|appx)(bundle){0,1}$",
  "PreviousVersion": "1.4.5.2031",
  "ManifestFields": {
    "PackageVersion": "($Response | Where-Object { $_.name -match 'main' }).tag_name.TrimStart('v').Split('.')[0] + '.' + ($Response | Where-Object { $_.name -match 'main' }).tag_name.TrimStart('v').Split('.')[1] + '.' + ($Response | Where-Object { $_.name -match 'main' }).tag_name.TrimStart('v').Split('.')[2] + '-beta.' + ($Response | Where-Object { $_.name -match 'main' }).tag_name.TrimStart('v').Split('.')[3]",
    "InstallerUrls": "($Response | Where-Object { $_.name -match 'main' }).assets | ForEach-Object { if ($_.name -match $InstallerRegex) { $_.browser_download_url } }",
    "ReleaseNotesUrl": "($Response | Where-Object { $_.name -match 'main' }).html_url",
    "ReleaseDate": "(Get-Date -Date ($Response | Where-Object { $_.name -match 'main' }).published_at).ToString('yyyy-MM-dd')"
  },
  "AdditionalInfo": {
    "PreRelease": false,
    "PreviousReleaseId": 65738477
  },
  "PostUpgradeScript": "$Package.AdditionalInfo.PreviousReleaseId = $Response.id",
  "YamlCreateParams": {
    "SkipPRCheck": false,
    "AutoUpgrade": false,
    "DeletePreviousVersion": false
  },
  "SkipPackage": false
}
