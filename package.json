{
    "name": "vedantmgoyal2009",
    "version": "1.0.0",
    "publisher": "vedantmgoyal2009",
    "description": "vscode extension, github bot, and more...",
    "main": "./tools/vscode-extension.js",
    "private": true,
    "directories": {
        "doc": "docs"
    },
    "workspaces": [
        "docs"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "vs-publish": "vsce unpublish --force && vsce publish",
        "gh-bot": "probot run ./tools/github-bot.js",
        "wa-bot": "node ./tools/whatsapp-bot.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vedantmgoyal2009/vedantmgoyal2009.git"
    },
    "keywords": [
        "java",
        "winget",
        "automation",
        "powershell",
        "probot-app",
        "hacktoberfest"
    ],
    "author": "Vedant",
    "license": "AGPL-3.0",
    "bugs": {
        "url": "https://github.com/vedantmgoyal2009/vedantmgoyal2009/issues"
    },
    "homepage": "https://bittu.eu.org/",
    "dependencies": {
        "dotenv": "^16.0.2",
        "firebase": "^9.14.0",
        "probot": "^12.2.4",
        "vsce": "^2.14.0",
        "whatsapp-web.js": "^1.18.3"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "17.3.0",
        "@types/node": "18.x",
        "@types/vscode": "^1.73.1",
        "commitizen": "^4.2.5",
        "commitlint": "^17.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "prettier": "^2.8.0"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/vedantmgoyal2009"
    },
    "contributes": {
        "commands": [
            {
                "command": "vedantmgoyal2009.helloWorld",
                "title": "Hello World",
                "category": "vedantmgoyal2009"
            },
            {
                "command": "vedantmgoyal2009.testWpaPackageJson",
                "title": "test wpa package json",
                "category": "vedantmgoyal2009"
            }
        ]
    },
    "activationEvents": [
        "workspaceContains:winget-pkgs-automation/packages/**/*.json"
    ],
    "engines": {
        "node": ">= 18.8.0",
        "vscode": "^1.72.0"
    },
    "categories": [
        "Testing",
        "Other"
    ],
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
