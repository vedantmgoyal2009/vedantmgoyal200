{
  "$schema": "https://github.com/vedantmgoyal2009/winget-pkgs-automation/raw/main/schema.json",
  "Identifier": "BraveSoftware.BraveBrowser",
  "Update": {
    "InvokeType": "RestMethod",
    "Uri": "https://api.github.com/repos/brave/brave-browser/releases",
    "Method": "Get",
    "Headers": {
      "Authorization": "$AuthToken",
      "Accept": "application/vnd.github.v3+json"
    },
    "Body": "",
    "UserAgent": ""
  },
  "PostResponseScript": "$Response = $Response | Where-Object { $_.name.Contains(\"Release\") } | Select-Object -First 1",
  "VersionRegex": "(?<=v)[0-9.]+",
  "InstallerRegex": "BraveBrowserStandaloneSilentSetup.*.exe$",
  "PreviousVersion": "98.1.35.100",
  "ManifestFields": {
    "PackageVersion": "\"98.\"+$($Response.tag_name.TrimStart(\"v\"))",
    "InstallerUrls": "$Response.assets | ForEach-Object { if ($_.name -match $InstallerRegex) { $_.browser_download_url } }"
  },
  "AdditionalInfo": {},
  "PostUpgradeScript": "",
  "YamlCreateParams": {
    "SkipPRCheck": false,
    "AutoUpgrade": false,
    "DeletePreviousVersion": false
  },
  "SkipPackage": false
}
