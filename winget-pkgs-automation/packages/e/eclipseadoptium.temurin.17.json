{
  "$schema": "https://github.com/vedantmgoyal2009/vedantmgoyal2009/raw/main/winget-pkgs-automation/schema.json",
  "Identifier": "EclipseAdoptium.Temurin.17",
  "Update": [
    {
      "InvokeType": "RestMethod",
      "Uri": "https://api.github.com/repos/adoptium/temurin17-binaries/releases?per_page=1",
      "Method": "Get",
      "Headers": {
        "Authorization": "$AuthToken",
        "Accept": "application/vnd.github.v3+json"
      },
      "Body": "",
      "UserAgent": ""
    }
  ],
  "PostResponseScript": "$UpdateCondition = $Response.prerelease -eq $PreRelease -and $Response.id -gt $PreviousReleaseId",
  "VersionRegex": "(?<=v)[0-9.]+",
  "InstallerRegex": "^OpenJDK17U-jdk_(x86-32|x64)_windows_hotspot_.*.msi$",
  "PreviousVersion": "",
  "ManifestFields": {
    "PackageVersion": "$Response.tag_name.TrimStart('jdk-').Replace('+', '.')",
    "InstallerUrls": "$Response.assets | ForEach-Object { if ($_.name -match $InstallerRegex) { $_.browser_download_url } }"
  },
  "AdditionalInfo": {
    "PreRelease": false,
    "PreviousReleaseId": 0
  },
  "PostUpgradeScript": "$Package.AdditionalInfo.PreviousReleaseId = $Response.id",
  "SkipPRCheck": false,
  "SkipPackage": false
}
