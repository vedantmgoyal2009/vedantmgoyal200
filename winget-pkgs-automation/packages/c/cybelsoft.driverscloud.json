{
  "$schema": "https://github.com/vedantmgoyal2009/vedantmgoyal2009/raw/main/winget-pkgs-automation/schema.json",
  "Identifier": "Cybelsoft.DriversCloud",
  "Update": {
    "InvokeType": "WebRequest",
    "Uri": "https://www.driverscloud.com/en/my-drivers",
    "Method": "Get",
    "Headers": {},
    "Body": "",
    "UserAgent": ""
  },
  "PostResponseScript": "$Response = ($Response | Select-String -Pattern $VersionRegex).Matches.Value",
  "VersionRegex": "(?<=version:.*)[0-9.]+(?=<\/div>)",
  "InstallerRegex": ".(exe|msi|msix|appx)(bundle){0,1}$",
  "PreviousVersion": "11.1.2.0",
  "ManifestFields": {
    "PackageVersion": "$Response",
    "InstallerUrls": "@($x64_Uri.Replace('#version', $Response.Replace('.','_')), $x86_Uri.Replace('#version', $Response.Replace('.','_')))"
  },
  "AdditionalInfo": {
    "x64_Uri": "https://mcdrivers.driverscloud.com/applis/DriversCloudx64_#version.exe",
    "x86_Uri": "https://mcdrivers.driverscloud.com/applis/DriversCloud_#version.exe"
  },
  "PostUpgradeScript": "",
  "YamlCreateParams": {
    "SkipPRCheck": false,
    "AutoUpgrade": false,
    "DeletePreviousVersion": false
  },
  "SkipPackage": false
}
