// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.203.0/containers/ubuntu
{
	"name": "Ubuntu",
	"runArgs": ["--init"],
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Ubuntu version: hirsute, focal, bionic
		// Use hirsute or bionic on local arm64/Apple Silicon.
		"args": { "VARIANT": "hirsute" }
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {},


	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"github.copilot-nightly",
		"ms-vscode.powershell-preview",
		"visualstudioexptteam.vscodeintellicode",
		"redhat.vscode-yaml",
		"ms-vscode.wordcount"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo npm install commitizen @commitlint/config-conventional -g && npx commitizen init cz-conventional-changelog",

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",
	"features": {
		"git": "latest",
		"git-lfs": "latest",
		"github-cli": "latest",
		"node": "latest",
		"ruby": "latest",
		"powershell": "latest"
	}
}