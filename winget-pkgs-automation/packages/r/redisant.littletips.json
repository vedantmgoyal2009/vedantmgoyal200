{
  "$schema": "https://github.com/vedantmgoyal2009/vedantmgoyal2009/raw/main/winget-pkgs-automation/schema.json",
  "Identifier": "Redisant.LittleTips",
  "Update": {
    "InvokeType": "RestMethod",
    "Uri": "https://www.redisant.com/lt/activate/checkUpdate",
    "Method": "Get",
    "Headers": {},
    "Body": "",
    "UserAgent": ""
  },
  "PostResponseScript": "",
  "VersionRegex": "[0-9.]+",
  "InstallerRegex": ".(exe|msi|msix|appx)(bundle){0,1}$",
  "PreviousVersion": "1.0.2.0",
  "ManifestFields": {
    "PackageVersion": "$Response.version",
    "InstallerUrls": "$Response.enDownloadUrl.Split('|').Where({ $_ -match $InstallerRegex })",
    "ReleaseNotes": "$Response.enDescribes -replace '^','- ' -join \"`n\""
  },
  "AdditionalInfo": {},
  "PostUpgradeScript": "",
  "YamlCreateParams": {
    "SkipPRCheck": false,
    "AutoUpgrade": false,
    "DeletePreviousVersion": false
  },
  "SkipPackage": false
}
