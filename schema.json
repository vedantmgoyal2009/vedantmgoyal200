{
    "$id": "https://github.com/vedantmgoyal2009/winget-pkgs-automation/raw/main/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": [
        "$schema",
        "Identifier",
        "Update",
        "PostResponseScript",
        "VersionRegex",
        "InstallerRegex",
        "PreviousVersion",
        "ManifestFields",
        "AdditionalInfo",
        "PostUpgradeScript",
        "YamlCreateParams"
    ],
    "title": "Schema for JSON files in this repository",
    "type": "object",
    "properties": {
        "$schema": {
            "$id": "#/properties/%24schema",
            "enum": [
                "https://github.com/vedantmgoyal2009/winget-pkgs-automation/raw/main/schema.json"
            ],
            "type": "string"
        },
        "Identifier": {
            "$id": "#/properties/Identifier",
            "type": "string"
        },
        "Update": {
            "$id": "#/properties/Update",
            "required": [
                "InvokeType",
                "Uri",
                "Method",
                "Headers",
                "Body",
                "UserAgent"
            ],
            "type": "object",
            "properties": {
                "InvokeType": {
                    "$id": "#/properties/Update/properties/InvokeType",
                    "enum": [
                        "RestMethod",
                        "WebRequest"
                    ],
                    "type": "string"
                },
                "Uri": {
                    "$id": "#/properties/Update/properties/Uri",
                    "type": "string"
                },
                "Method": {
                    "$id": "#/properties/Update/properties/Method",
                    "enum": [
                        "Default",
                        "Delete",
                        "Get",
                        "Head",
                        "Merge",
                        "Options",
                        "Patch",
                        "Post",
                        "Put",
                        "Trace"
                    ],
                    "type": "string"
                },
                "Headers": {
                    "$id": "#/properties/Update/properties/Headers",
                    "type": "object",
                    "additionalProperties": true
                },
                "Body": {
                    "$id": "#/properties/Update/properties/Body",
                    "type": "string"
                },
                "UserAgent": {
                    "$id": "#/properties/Update/properties/UserAgent",
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "PostResponseScript": {
            "$id": "#/properties/PostResponseScript",
            "type": "string"
        },
        "VersionRegex": {
            "$id": "#/properties/VersionRegex",
            "type": "string"
        },
        "InstallerRegex": {
            "$id": "#/properties/InstallerRegex",
            "type": "string"
        },
        "PreviousVersion": {
            "$id": "#/properties/PreviousVersion",
            "type": "string"
        },
        "ManifestFields": {
            "$id": "#/properties/ManifestFields",
            "enum": [
                "PackageVersion",
                "InstallerUrls",
                "LicenseUrl",
                "ReleaseDate",
                "ReleaseNotesUrl",
                "ReleaseNotes"
            ],
            "required": [
                "PackageVersion",
                "InstallerUrls"
            ],
            "type": "object",
            "properties": {
                "PackageVersion": {
                    "$id": "#/properties/ManifestFields/properties/PackageVersion",
                    "type": "string"
                },
                "InstallerUrls": {
                    "$id": "#/properties/ManifestFields/properties/InstallerUrls",
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "AdditionalInfo": {
            "$id": "#/properties/AdditionalInfo",
            "type": "object",
            "additionalProperties": true
        },
        "PostUpgradeScript": {
            "$id": "#/properties/PostUpgradeScript",
            "type": "string"
        },
        "YamlCreateParams": {
            "$id": "#/properties/YamlCreateParams",
            "required": [
                "SkipPRCheck",
                "AutoUpgrade",
                "DeletePreviousVersion"
            ],
            "type": "object",
            "properties": {
                "SkipPRCheck": {
                    "$id": "#/properties/YamlCreateParams/properties/SkipPRCheck",
                    "enum": [
                        true,
                        false
                    ],
                    "type": "boolean"
                },
                "AutoUpgrade": {
                    "$id": "#/properties/YamlCreateParams/properties/AutoUpgrade",
                    "enum": [
                        true,
                        false
                    ],
                    "type": "boolean"
                },
                "DeletePreviousVersion": {
                    "$id": "#/properties/YamlCreateParams/properties/DeletePreviousVersion",
                    "enum": [
                        true,
                        false
                    ],
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
