{
  "$schema": "https://github.com/vedantmgoyal2009/vedantmgoyal2009/raw/main/winget-pkgs-automation/schema.json",
  "Identifier": "RIA.DigiDoc4",
  "Update": {
    "InvokeType": "RestMethod",
    "Uri": "https://api.github.com/repos/open-eid/DigiDoc4-Client/releases?per_page=1",
    "Method": "Get",
    "Headers": {
      "Authorization": "$AuthToken",
      "Accept": "application/vnd.github.v3+json"
    },
    "Body": "",
    "UserAgent": ""
  },
  "PostResponseScript": "$UpdateCondition = $Response.prerelease -eq $PreRelease -and $Response.id -gt $PreviousReleaseId",
  "VersionRegex": "(?<=_)[0-9.]+(?=\\.zip)",
  "InstallerRegex": ".(exe|msi|msix|appx)(bundle){0,1}$",
  "PreviousVersion": "4.2.11",
  "ManifestFields": {
    "PackageVersion": "($Response.assets.name.Where({$_ -match 'dbg'}) | Select-String -Pattern $VersionRegex).Matches.Value",
    "InstallerUrls": "$Response.assets | ForEach-Object { if ($_.name -match $InstallerRegex) { $_.browser_download_url } }",
    "ReleaseNotesUrl": "$Response.html_url",
    "ReleaseDate": "(Get-Date -Date $Response.published_at).ToString('yyyy-MM-dd')"
  },
  "AdditionalInfo": {
    "PreRelease": false,
    "PreviousReleaseId": 61867333
  },
  "PostUpgradeScript": "$Package.AdditionalInfo.PreviousReleaseId = $Response.id",
  "YamlCreateParams": {
    "SkipPRCheck": false,
    "DeletePreviousVersion": false
  },
  "SkipPackage": false
}
